<div
  class="flexcol step-config-item"
  data-transition-type="clockwipe"
  data-id="{{id}}"
>
  <form>
    <input type="hidden" value="{{id}}" name="id" id="id" />
    <p>{{localize "BATTLETRANSITIONS.SCENECONFIG.CLOCKWIPE.DESCRIPTION"}}</p>
    <div class="form-group">
      <label for="clockdirection">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.CLOCKWIPE.DIRECTION.LABEL"
        }}</label>
      <select name="clockdirection" id="clockdirection">
        {{selectOptions
          clockDirectionSelect
          selected=clockdirection
          localize=true
        }}
      </select>
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.CLOCKWIPE.DIRECTION.HINT"
      }}</p>
    <div class="form-group">
      <label for="direction">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.DIRECTION.LABEL"
        }}</label>
      <select name="direction" id="direction">
        {{selectOptions directionSelect selected=direction localize=true}}
      </select>
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.COMMON.DIRECTION.HINT"
      }}</p>
    <div class="form-group">
      <label for="duration">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.DURATION.LABEL"
        }}</label>
      <input
        type="number"
        value="{{duration}}"
        min="0"
        step="1"
        name="duration"
        id="duration"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.COMMON.DURATION.HINT"
      }}</p>
    <div class="form-group">
      <label for="background">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.LABEL"
        }}</label>
      <input
        type="text"
        data-color-picker="{alphaChannel: true}"
        name="background"
        id="background"
        value="{{background}}"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.HINT"
      }}</p>
  </form>
</div>