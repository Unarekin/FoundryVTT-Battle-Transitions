<div
  class="flexrow step-config-item"
  data-transition-id="linearwipe-{{id}}"
  data-transition-type="linearwipe"
>

  <div class="flexcol flex2">
    <div class="flexrow">
      <label for="linearwipe-{{id}}-duration">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DURATION.LABEL"
        }}</label>
      <input
        type="number"
        name="linearwipe-{{id}}-duration"
        id="linearwipe-{{id}}-duration"
        placeholder="1000"
        min="0"
        step="1"
        value="{{duration}}"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DURATION.HINT"
      }}</p>
  </div>
  <div class="flexcol flex2">
    <div class="flexrow">
      <label for="linearwipe-{{id}}-direction">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DIRECTION.LABEL"
        }}</label>
      <select></select>
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DIRECTION.HINT"
      }}</p>
  </div>
  <div class="flexcol flex2">
    <div class="flexrow">
      <label for="linearwipe-{{id}}-background">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.BACKGROUND.LABEL"
        }}</label>
      <input
        type="text"
        data-color-picker="{alphaChannel: true}"
        name="linearwipe-{{id}}-background"
        id="linearwipe-{{id}}-background"
        value="{{background}}"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.BACKGROUND.HINT"
      }}</p>
  </div>
</div>