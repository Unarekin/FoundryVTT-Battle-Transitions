<div
  class="flexcol step-config-item"
  data-transition-type="fade"
  data-id="{{id}}"
>
  <form>
    <input type="hidden" value="{{id}}" name="id" id="id" />
    <p>{{localize "BATTLETRANSITIONS.SCENECONFIG.FADE.DESCRIPTION"}}</p>
    <div class="form-group">
      <label for="duration">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.FADE.DURATION.LABEL"
        }}</label>
      <input
        type="number"
        name="duration"
        id="duration"
        value="{{duration}}"
        step="1"
        min="0"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.FADE.DURATION.HINT"
      }}</p>
    <div class="form-group">
      <label for="background">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.FADE.BACKGROUND.LABEL"
        }}</label>
      <input
        type="text"
        data-color-picker="{alphaChannel: true}"
        id="background"
        name="background"
        value="{{background}}"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.FADE.BACKGROUND.HINT"
      }}</p>
  </form>
</div>