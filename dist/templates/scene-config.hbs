<div class="form-group">
  <label for="auto-trigger">{{localize
      "BATTLETRANSITIONS.SCENECONFIG.AUTOTRIGGER.LABEL"
    }}</label>
  <input
    type="checkbox"
    {{checked autoTrigger}}
    name="auto-trigger"
    id="auto-trigger"
  />
  <p class="notes">{{localize
      "BATTLETRANSITIONS.SCENECONFIG.AUTOTRIGGER.HINT"
    }}</p>
</div>
<fieldset>
  <legend>{{localize
      "BATTLETRANSITIONS.SCENECONFIG.TRANSITIONCONFIG.LABEL"
    }}</legend>
  {{#each steps}}
    {{#switch type}}
      {{#case "fade"}}{{> "/modules/battle-transitions/templates/config/fade-config.hbs" this}}{{/case}}
    {{/switch}}
  {{/each}}
</fieldset>