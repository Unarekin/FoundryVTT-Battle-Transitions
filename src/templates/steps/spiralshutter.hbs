<section
  data-role="step-config"
  data-id="{{config.id}}"
  data-transition-type="spiralshutter"
>
  <input type="hidden" name="id" id="id" value="{{config.id}}" />
  <p>{{localize "BATTLETRANSITIONS.SPIRALSHUTTER.DESCRIPTION"}}</p>
  {{> (moduleTemplate "steps/partials/label.hbs") this }}

  <div class="form-group">
    <label for="direction">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.CLOCKDIRECTION.LABEL"}}</label>
    <select name="direction" id="direction">
      {{selectOptions directionSelect selected=config.direction localize=true}}
    </select>
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.CLOCKDIRECTION.HINT"}}</p>
  </div>

  <div class="form-group">
    <label for="radial">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.RADIAL.LABEL"}}</label>
    <select name="radial" id="radial">
      {{selectOptions radialSelect selected=config.radial localize=true}}
    </select>
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.RADIAL.HINT"}}</p>
  </div>

  {{! Duration }}
  {{> (moduleTemplate "steps/partials/duration-selector.hbs") this }}
  {{! Falloff }}
  {{> (moduleTemplate "steps/partials/falloff-config.hbs") this }}
  {{! Background }}
  {{> (moduleTemplate "steps/partials/background-selector.hbs") this }}
  {{! Eeasing }}
  {{> (moduleTemplate "steps/partials/easing-selector.hbs") this }}
</section>