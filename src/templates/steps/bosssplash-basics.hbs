<div class="tab {{tab.cssClass}}" data-tab="basics" data-group="primary">
  {{> (moduleTemplate "steps/partials/label.hbs") this}}

  <div class="form-group">
    <label for="actor">{{localize "DOCUMENT.Actor"}}</label>
    <document-picker type="actor" name="actor" id="actor" value="{{config.actor}}"></document-picker>
  </div>

  <div class="form-group">
    <label for="message">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.MESSAGE.LABEL"}}</label>
    <input type="text" name="message" id="message" value="{{config.message}}">
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.MESSAGE.HINT"}}</p>
  </div>

  <div class="form-group">
    <label for="subText">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.SUBTEXT.LABEL"}}</label>
    <input type="text" name="subText" id="subText" value="{{config.subText}}">
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.SUBTEXT.HINT"}}</p>
  </div>

  {{> (moduleTemplate "steps/partials/duration-selector.hbs") this}}

  <div class="form-group">
    <label for="animationDelay">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.ANIMATIONDELAY.LABEL"}}</label>
    <input type="number" min="0" step="1" value="{{config.animationDelay}}" name="animationDelay" id="animationDelay" required>
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.ANIMATIONDELAY.HINT"}}</p>
  </div>

  <div class="form-group">
    <label for="animationDuration">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.ANIMATIONDURATION.LABEL"}}</label>
    <input type="number" min="0" step="1" value="{{config.animationDuration}}" name="animationDuration" id="animationDuration" required>
    <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.BOSSSPLASH.ANIMATIONDURATION.HINT"}}</p>
  </div>
</div>