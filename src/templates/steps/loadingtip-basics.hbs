<div class="tab {{tab.cssClass}}" data-tab="basics" data-group="primary">
  {{> "modules/battle-transitions/templates/steps/partials/label.hbs" this}}

  <div class="form-group">
    <label for="sourceType">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.SOURCETYPE.LABEL"}}</label>
    <select name="sourceType" id="sourceType">
      {{selectOptions sourceSelect selected=config.source localize=true}}
    </select>
    <p class="hint" data-source-type="string">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.SOURCETYPE.STRING.HINT"}}</p>
    <p class="hint" data-source-type="rolltable">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.SOURCETYPE.ROLLTABLE.HINT"}}</p>
  </div>

  <section data-source-type="string">
    <div class="form-group">
      <label for="message">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.MESSAGE.LABEL"}}</label>
      <input type="text" name="message" id="message" value="{{config.message}}">
      <p class="hint">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.MESSAGE.HINT"}}</p>
    </div>
  </section>
  <section data-source-type="rolltable">
    <div class="form-group">
      <label for="table">{{localize "BATTLETRANSITIONS.SCENECONFIG.LOADINGTIP.ROLLTABLE.LABEL"}}</label>
      <select name="table" id="table">
        
      </select>
    </div>
  </section>

</div>