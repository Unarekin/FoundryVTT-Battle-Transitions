<section
  data-role="step-config"
  data-id="{{config.id}}"
  data-transition-type="spiralwipe"
>
  <input type="hidden" name="id" id="id" value="{{config.id}}" />
  <p>{{localize "BATTLETRANSITIONS.SPIRALWIPE.DESCRIPTION"}}</p>
  {{> (moduleTemplate "steps/partials/label.hbs") this }}

  {{> (moduleTemplate "steps/partials/simple-select.hbs")
    key="COMMON.DIRECTION"
    id="direction"
    options=directionSelect
    selected=config.direction
  }}

  {{> (moduleTemplate "steps/partials/simple-select.hbs")
    key="COMMON.RADIAL"
    id="radial"
    options=radialSelect
    selected=config.radial
  }}

  {{> (moduleTemplate "steps/partials/simple-select.hbs")
    key="CLOCKWIPE.DIRECTION"
    id="clockDirection"
    options=clockDirectionSelect
    selected=config.clockDirection
  }}

  {{! Duration }}
  {{> (moduleTemplate "steps/partials/duration-selector.hbs") this }}
  {{! Falloff }}
  {{> (moduleTemplate "steps/partials/falloff-config.hbs") this }}
  {{! Background }}
  {{> (moduleTemplate "steps/partials/background-selector.hbs") this }}
  {{! Eeasing }}
  {{> (moduleTemplate "steps/partials/easing-selector.hbs") this }}
</section>