<div
  class="flexcol step-config-item"
  data-transition-type="parallel"
  data-id="{{id}}"
>
  <input type="hidden" name="step.id" id="step.id" value="{{id}}" />

  <p class="hint">{{localize "BATTLETRANSITIONS.PARALLEL.DESCRIPTION"}}</p>

  <div class="form-group">
    <label for="step.label">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.COMMON.LABEL.LABEL"
      }}</label>
    <input type="text" name="step.label" id="step.label" value="{{label}}" />
  </div>
  <p class="hint">{{localize
      "BATTLETRANSITIONS.SCENECONFIG.COMMON.LABEL.HINT"
    }}</p>

  <div class="flexrow">
    <div class="flex1">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.PARALLEL.SEQUENCES"
      }}</div>
    <div class="flex0">
      <i
        class="fas fa-fw fa-plus link"
        data-action="addSequence"
        title="{{localize
          'BATTLETRANSITIONS.SCENECONFIG.PARALLEL.ADDSEQUENCE'
        }}"
      ></i>
    </div>
  </div>
  <hr />
  <div class="flexcol" data-role="sequence-list">

  </div>
</div>