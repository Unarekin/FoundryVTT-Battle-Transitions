<div class="flexcol step-config-item" data-transition-type="barwipe" data-id="{{id}}">
  <form>
    <p>{{localize "BATTLETRANSITIONS.BARWIPE.DESCRIPTION"}}</p>

    <div class="form-group">
      <label for="bars">{{localize "BATTLETRANSITIONS.SCENECONFIG.BARWIPE.BARS.LABEL"}}</label>
      <input type="number" min="2" step="1" value="{{bars}}" name="bars" id="bars">
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.BARWIPE.BARS.HINT"}}</p>

    <div class="form-group">
      <label for="direction">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.DIRECTION.LABEL"}}</label>
      <select name="direction" id="direction">
        {{selectOptions directionSelect selected=direction localize=true}}
      </select>
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.DIRECTION.HINT"}}</p>

    {{> "/modules/battle-transitions/templates/config/duration-selector.hbs" this}}
    {{> "/modules/battle-transitions/templates/config/background-selector.hbs" this}}

    <div class="form-group">
      <label for="easing">{{localize "BATTLETRANSITIONS.SCENECONFIG.EASING.LABEL" }}</label>
      <select name="easing" id="easing">
        {{selectOptions easingSelect selected=easing localize=true}}
      </select>
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.EASING.HINT" }}</p>
  </form>
</div>
