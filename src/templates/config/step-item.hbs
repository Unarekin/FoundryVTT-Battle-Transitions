<div
  class="flexrow step-config-item"
  data-transition-type="{{type}}"
  data-flag="{{flag}}"
  data-id="{{id}}"
  title="{{localize description}}"
>
  <div class="flex0 drag-handle"><i class="fas fa-grip-lines"></i></div>
  <div><span class="link" data-action="configure">{{localize name}}</span></div>
  {{#if label}}
    <div>{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.LABEL.FORMAT" label=label}}</div>
  {{/if}}
  <div class="right-align">{{#if calculatedDuration}} {{formatDuration calculatedDuration}} {{/if}}</div>
  {{#if skipConfig}}
    <i class="fas fa-fw flex0"></i>
  {{else}}
    <i
      class="fas fa-cogs fa-fw step-button flex0 link"
      data-action="configure"
      data-step="{{id}}"
      title="{{localize 'BATTLETRANSITIONS.SCENECONFIG.BUTTONS.CONFIGURE' name=name }}"
      >
      </i>
  {{/if}}
  <i
    class="fas fa-trash fa-fw step-button flex0 link"
    data-action="remove"
    data-step="{{id}}"
    title="{{localize
      'BATTLETRANSITIONS.SCENECONFIG.BUTTONS.REMOVE'
      name=name
    }}"
  ></i>

</div>