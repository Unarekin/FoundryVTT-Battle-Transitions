<div class="flexcol step-config-item" data-transition-type="melt" data-id="{{id}}">
  <form>
    <input type="hidden" value="{{id}}">
    <p>{{localize "BATTLETRANSITIONS.SCENECONFIG.MELT.DESCRIPTION"}}</p>
    <div class="form-group">
      <label for="duration">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.DURATION.LABEL"}}</label>
      <input type="number" name="duration" id="duration" value="{{duration}}" step="1" min="0">
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.DURATION.HINT"}}</p>
    <div class="form-group">
      <label for="background">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.LABEL"}}</label>
      <input type="text" data-color-picker="{alphaChannel: true}" value="{{background}}" id="background" name="background">
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.HINT"}}</p>
  </form>
</div>