<div class="flexcol step-config-item" data-transition-type="spiralradial" data-id="{{id}}">
  <input type="hidden" name="id" id="id" value="{{id}}">
  <p>{{localize "BATTLETRANSITIONS.SPIRALSHUTTER.DESCRIPTION"}}</p>
    <div class="form-group">
      <label for="direction">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.CLOCKDIRECTION.LABEL"}}</label>
      <select name="direction" id="direction">
        {{selectOptions directionSelect selected=direction localize=true}}
      </select>
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.CLOCKDIRECTION.HINT"}}</p>
    <div class="form-group">
      <label for="radial">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.RADIAL.LABEL"}}</label>
      <select name="radial" id="radial">
        {{selectOptions radialSelect selected=radial localize=true}}
      </select>
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.COMMON.RADIAL.HINT" }}</p>
    {{> "/modules/battle-transitions/templates/config/duration-selector.hbs" this}}
    {{> "/modules/battle-transitions/templates/config/background-selector.hbs" this}}
    <div class="form-group">
      <label for="easing">{{localize "BATTLETRANSITIONS.SCENECONFIG.EASING.LABEL"}}</label>
      <select name="easing" id="easing">
        {{selectOptions easingSelect selected=easing localize=true}}
      </select>
    </div>
    <p class="notes">{{localize "BATTLETRANSITIONS.SCENECONFIG.EASING.HINT"}}</p>
</div>
