<fieldset class="background-selector">
  <legend>{{localize
      "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.LABEL"
    }}</legend>
  <span class="notes">{{localize
      "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.HINT"
    }}</span>
  <div class="form-group">
    <table class="no-margins">
      <tr>
        <td style="width:50%" valign="top">
          <select name="step.backgroundType" id="step.backgroundType">
            {{selectOptions bgTypeSelect selected=backgroundType localize=true}}
          </select>
        </td>
        <td valign="top">
          <section data-background-type="color">
            <input
              type="text"
              data-color-picker="{alphaChannel: true}"
              value="{{backgroundColor}}"
              id="step.backgroundColor"
              name="step.backgroundColor"
            />
          </section>
          <section data-background-type="image">
            <file-picker
              id="step.backgroundImage"
              name="step.backgroundImage"
              type="imagevideo"
              value="{{backgroundImage}}"
            ></file-picker>
            <section id="step.backgroundImagePreview"></section>
            </section>
          </section>
          <section data-background-type="overlay">

          </section>
        </td>
      </tr>
    </table>
  </div>
</fieldset>