<fieldset class="background-selector">
  <legend>{{localize
      "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.LABEL"
    }}</legend>
  <span class="notes">{{localize
      "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.HINT"
    }}</span>
  <div class="form-group">

    <select name="backgroundType" id="backgroundType">
      {{selectOptions bgTypeSelect selected=backgroundType localize=true}}
      {{!-- <option value="color">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.COLOR"
        }}</option>
      <option value="image">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.IMAGE"
        }}</option>
      <option value="overlay">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.COMMON.BACKGROUND.OVERLAY"
        }}</option> --}}
    </select>

    <section data-background-type="color">
      <input
        type="text"
        data-color-picker="{alphaChannel: true}"
        value="{{backgroundColor}}"
        id="backgroundColor"
        name="backgroundColor"
      />
    </section>
    <section data-background-type="image">
      <file-picker
        id="backgroundImage"
        name="backgroundImage"
        type="imagevideo"
        value="{{backgroundImage}}"
      ></file-picker>
      <section id="backgroundImagePreview"></section>
    </section>
    <section data-background-type="overlay">

    </section>
  </div>
</fieldset>