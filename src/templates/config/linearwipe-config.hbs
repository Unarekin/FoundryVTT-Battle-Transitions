<div
  class="flexcol step-config-item"
  data-transition-type="linearwipe"
  data-id="{{id}}"
>
  <form>
    <input type="hidden" value="{{id}}" name="id" id="id" />
    <div class="form-group">
      <label for="direction">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DIRECTION.LABEL"
        }}</label>
      <select name="direction" id="direction">
        <option value="left">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.LEFT"
          }}</option>
        <option value="right">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.RIGHT"
          }}</option>
        <option value="top">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.TOP"
          }}</option>
        <option value="bottom">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.BOTTOM"
          }}</option>
        <option value="topleft">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.TOPLEFT"
          }}</option>
        <option value="topright">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.TOPRIGHT"
          }}</option>
        <option value="bottomleft">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.BOTTOMLEFT"
          }}</option>
        <option value="bottomright">{{localize
            "BATTLETRANSITIONS.DIRECTIONS.BOTTOMRIGHT"
          }}</option>
      </select>
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DIRECTION.HINT"
      }}</p>
    <div class="form-group">
      <label for="duration">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DURATION.LABEL"
        }}</label>
      <input
        type="number"
        name="duration"
        id="duration"
        value="{{duration}}"
        step="1"
        min="0"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.DURATION.HINT"
      }}</p>
    <div class="form-group">
      <label for="background">{{localize
          "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.BACKGROUND.LABEL"
        }}</label>
      <input
        type="text"
        data-color-picker="{alphaChannel: true}"
        id="background"
        name="background"
        value="{{background}}"
      />
    </div>
    <p class="notes">{{localize
        "BATTLETRANSITIONS.SCENECONFIG.LINEARWIPE.BACKGROUND.HINT"
      }}</p>
  </form>
</div>